    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', sans-serif;
            display: flex;
            height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, #1e1f25 0%, #2b3444 100%);
            color: #fff;
        }


        /* Sidebar */
        .sidebar {
            width: 280px;
            background: rgba(31, 32, 40, 0.95);
            backdrop-filter: blur(20px);
            border-right: 1px solid rgba(255, 255, 255, 0.08);
            color: white;
            padding: 24px 0;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: fixed;
            left: 0;
            top: 0;
            height: 100%;
            overflow-x: hidden;
            transition: width 0.3s ease-in-out;
            box-shadow: 4px 0px 10px rgba(0, 0, 0, 0.2);
        }

        .sidebar.collapsed {
            width: 70px;
        }

        .sidebar .brand {
            font-size: 24px;
            font-weight: 600;
            background: linear-gradient(45deg, #3498db, #2ecc71);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            padding: 20px 0;
        }

        .sidebar.collapsed .brand {
            display: none;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin-top: 20px;
        }

        .sidebar ul li {
            margin: 15px 0;
            text-align: left;
            animation: fadeIn 0.5s ease-out forwards;
            opacity: 0;
        }

        .sidebar ul li:nth-child(1) { animation-delay: 0.1s; }
        .sidebar ul li:nth-child(2) { animation-delay: 0.2s; }
        .sidebar ul li:nth-child(3) { animation-delay: 0.3s; }
        .sidebar ul li:nth-child(4) { animation-delay: 0.4s; }
        .sidebar ul li:nth-child(5) { animation-delay: 0.5s; }
        .sidebar ul li:nth-child(6) { animation-delay: 0.6s; }
        .sidebar ul li:nth-child(7) { animation-delay: 0.7s; }
        .sidebar ul li:nth-child(8) { animation-delay: 0.8s; }
        .sidebar ul li:nth-child(9) { animation-delay: 0.9s; }

        .sidebar ul li a {
            color: #e1e1e1;
            text-decoration: none;
            font-size: 15px;
            display: flex;
            align-items: center;
            padding: 14px 24px;
            border-radius: 12px;
            transition: all 0.3s ease-in-out;
            background: rgba(255, 255, 255, 0.03);
            margin: 0 16px;
            font-weight: 500;
            letter-spacing: 0.3px;
        }

        .sidebar ul li a:hover {
            background: rgba(52, 152, 219, 0.15);
            transform: translateX(4px);
            box-shadow: 0 4px 20px rgba(52, 152, 219, 0.15);
        }

        .sidebar ul li a .icon {
            margin-right: 15px;
            font-size: 20px;
        }

        .sidebar.collapsed ul li a {
            justify-content: center;
        }

        .sidebar.collapsed ul li a .icon {
            margin-right: 0;
        }

        .sidebar.collapsed ul li a span {
            display: none;
        }

        /* Header */
        .header {
            background: rgba(31, 32, 40, 0.95);
            backdrop-filter: blur(20px);
            padding: 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 100;
            display: flex;
            align-items: center;
            color: #fff;
        }

        .header h1 {
            font-size: 22px;
            font-weight: 600;
            background: linear-gradient(45deg, #3498db, #2ecc71);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-left: 270px;
            transition: margin-left 0.3s ease-in-out;
        }

        .header.collapsed h1 {
            margin-left: 90px;
        }

        .header .toggle-btn {
            font-size: 24px;
            background: none;
            border: none;
            color: #fff;
            cursor: pointer;
            margin-right: 20px;
            transition: transform 0.3s ease-in-out;
        }

        .header .toggle-btn:hover {
            transform: rotate(90deg);
        }

        /* Content */
        .content {
            margin-left: 280px;
            margin-top: 85px;
            padding: 32px;
            flex-grow: 1;
            transition: margin-left 0.3s ease-in-out;
            background: rgba(31, 32, 40, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            color: #fff;
            animation: fadeIn 0.8s ease-out;
        }

        .content h2 {
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 28px;
            background: linear-gradient(45deg, #3498db, #2ecc71);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .content p {
            line-height: 1.7;
            font-size: 16px;
            color: #e1e1e1;
            background: rgba(255, 255, 255, 0.03);
            padding: 24px;
            border-radius: 12px;
            margin-bottom: 24px;
            border: 1px solid rgba(255, 255, 255, 0.08);
            transition: transform 0.3s ease;
        }

        .content p:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .content.collapsed {
            margin-left: 90px;
        }

        /* Add these new animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .content {
            animation: fadeIn 0.8s ease-out;
        }

        .sidebar ul li {
            animation: fadeIn 0.5s ease-out forwards;
            opacity: 0;
        }

        .sidebar ul li:nth-child(1) { animation-delay: 0.1s; }
        .sidebar ul li:nth-child(2) { animation-delay: 0.2s; }
        .sidebar ul li:nth-child(3) { animation-delay: 0.3s; }
        .sidebar ul li:nth-child(4) { animation-delay: 0.4s; }
        .sidebar ul li:nth-child(5) { animation-delay: 0.5s; }
        .sidebar ul li:nth-child(6) { animation-delay: 0.6s; }
        .sidebar ul li:nth-child(7) { animation-delay: 0.7s; }
        .sidebar ul li:nth-child(8) { animation-delay: 0.8s; }
        .sidebar ul li:nth-child(9) { animation-delay: 0.9s; }

        #toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }

        .toast {
            background-color: rgba(31, 32, 40, 0.95);
            color: #e1e1e1;
            padding: 16px 24px;
            border-radius: 12px;
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            display: flex;
            align-items: center;
            justify-content: space-between;
            animation: slideIn 0.5s ease-in-out;
            border-left: 4px solid #2ecc71;
        }

        .toast.success {
            border-left-color: #2ecc71;
        }

        .toast.error {
            border-left-color: #e74c3c;
        }

        .toast-message {
            margin-right: 15px;
        }

        .toast-close {
            cursor: pointer;
            font-weight: bold;
            font-size: 18px;
            color: #666;
            background: none;
            border: none;
            padding: 0;
        }

        @keyframes slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @keyframes slideOut {
            from {
                transform: translateX(0);
                opacity: 1;
            }
            to {
                transform: translateX(100%);
                opacity: 0;
            }
        }

